<style>
  img {
    max-width: 100%;
    max-height: 40%;
    border-radius: 40%;
  }

  .col {
    margin-top: 4rem;
  }
</style>

<div class="container">
  <div class="row">
    <div class="col col-12 col-md-6">
      <img src="/imgs/<%= userImage%>" alt="`this is <%=  userName  %> photo`" />
    </div>
    <div class="col col-12 col-md-6">
      <h3><%= userName %></h3>
    </div>

    <% if (!isOwner) { %>
    <form method="post">
      <!-- we need 6 information to deal with different senarious  -->
      <input type="hidden" name="myId" value="<%= myId %>" />
      <input type="hidden" name="myName" value="<%= myName %>" />
      <input type="hidden" name="myImage" value="<%= myImage %>" />
      <input type="hidden" name="friendId" value="<%= friendId %>" />
      <input type="hidden" name="userName" value="<%= userName %>" />
      <input type="hidden" name="userImage" value="<%= userImage %>" />
      <% if (isFrinds) { %>
      <input type="submit" value="Delete Friend " class="btn btn-danger" formaction="/friend/delete" />
      <% }else if (isSentRequest){%>
      <input type="submit" value="Cancel  Request " class="btn btn-danger" formaction="/friend/cancel" />
      <% } else if(isRecivedRequest){ %>
      <input type="submit" value="Accept Request  " class="btn btn-success" formaction="/friend/accept" />
      <input type="submit" value="Reject Request " class="btn btn-danger" formaction="/friend/reject" />
      <% } else{ %>
      <input type="submit" value="Add Friend " class="btn btn-primary" formaction="/friend/add" />
      <% } %>
    </form>

    <% } %>
  </div>
</div>