
<div class="container mt-5">
    <div class="card">
      <div class="card-header">
        <h1 class="text-center">Create a New Group</h1>
      </div>
      <div class="card-body">
        <form action="/group/create" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <label for="groupName">Group Name</label>
            <input type="text" class="form-control" id="groupName" name="groupName" required>
          </div>
  
          <div class="form-group">
            <label for="groupImage">Group Image</label>
            <input type="file" class="form-control" id="groupImage" name="groupImage" accept="image/*" required>
          </div>
  
          <div class="form-group">
            <label>Select Friends to Add to the Group:</label>
            <% friends.forEach(friend => { %>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="friend_<%= friend.id %>" name="groupMembers" value="<%= friend.id %>">
                <label class="form-check-label" for="friend_<%= friend.id %>">
                  <%= friend.name %>
                </label>
              </div>
            <% }) %>
          </div> 
  
          <div class="text-center">
            <button type="submit" class="btn btn-primary" id="btn_createGroup">Create Group</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  
<script src="/socket.io/socket.io.js"></script>
<script src="/js/sockets/init.js"></script>
<script src="/js/sockets/chat.js"></script>