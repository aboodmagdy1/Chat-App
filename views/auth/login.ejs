<div class="container text-center `">
    <h3>Login</h3>
    <form action="/login" method="post" class="d-flex flex-column">
      <input
        class="mb-3"
        type="email"
        class="form-control"
        name="email"
        placeholder="Email"
      />
      <% let emailError = validationErrors.find(error => error.path ==='email')
      %>
      <% if (emailError) { %>
      <p class="alert alert-danger"><%= emailError.msg %></p>
      <% } %>
      <input
        class="mb-3"
        type="password"
        class="form-control"
        name="password"
        placeholder="Password"
      />
      <% let passwordError = validationErrors.find(error => error.path ==='password')
      %>
      <% if (passwordError) { %>
      <p class="alert alert-danger"><%= passwordError.msg %></p>
      <% } %>
  
      <input type="submit" class="btn btn-primary" value="LogIn" />
    </form>
    <br>
    <% if (authError) { %>
      <p class="alert alert-danger"> <%= authError %></p>
    <% } %>
    <br />
    <div>Don't have account? <a href="/signup">Create Account</a></div>
  </div>
  